#! /usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'forthrb'

# if the program is called with an argument,
# open the file and use it as input.
if (filename = ARGV[0])
  ForthInterpreter.new(File.open(filename)).interpret
else
  ForthInterpreter.new($stdin).interpret
end
